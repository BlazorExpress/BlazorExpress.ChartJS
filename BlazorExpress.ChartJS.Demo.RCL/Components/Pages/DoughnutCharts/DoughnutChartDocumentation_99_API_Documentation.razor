    <DocxTRow TItem="DoughnutChartDataset" PropertyName="@nameof(DoughnutChartDataset.Hidden)" DefaultValue="false" Required="false" Description="	Configures the visibility state of the dataset. Set it to true, to hide the dataset from the chart." AddedVersion="1.0.0" />
