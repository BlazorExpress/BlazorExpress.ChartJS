    <DocxTRow TItem="ChartData" PropertyName="@nameof(ChartData.Labels)" PropertyType="List<string>" DefaultValue="null" Required="true" Description="Gets or sets the Labels." AddedVersion="1.0.0" />
</DocxTable>

