    <DocxTRow TItem="DoughnutChartDataset" PropertyName="@nameof(DoughnutChartDataset.Data)" PropertyType="List<double>" DefaultValue="null" Required="false" Description="Get or sets the Data." AddedVersion="1.0.0" />
