    <DocxTRow TItem="DoughnutChartDataset" PropertyName="@nameof(DoughnutChartDataset.BackgroundColor)" PropertyType="List<string>" DefaultValue="null" Required="false" Description="Get or sets the background color." AddedVersion="1.0.0" />
