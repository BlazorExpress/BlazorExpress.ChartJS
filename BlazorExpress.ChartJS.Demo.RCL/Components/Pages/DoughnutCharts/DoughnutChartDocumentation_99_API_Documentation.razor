    <DocxTRow TItem="DoughnutChartDataset" PropertyName="@nameof(DoughnutChartDataset.HoverBorderWidth)" PropertyType="List<string>" DefaultValue="null" Required="true" Description="Get or sets the HoverBorderWidth." AddedVersion="1.0.0" />
    <DocxTRow TItem="DoughnutChartDataset" PropertyName="@nameof(DoughnutChartDataset.Label)" DefaultValue="null" Required="false" Description="The label for the dataset which appears in the legend and tooltips." AddedVersion="1.0.0" />
    <DocxTRow TItem="DoughnutChartDataset" PropertyName="@nameof(DoughnutChartDataset.Type)" DefaultValue="null" Required="true" Description="Get or sets the chart type." AddedVersion="1.0.0" />
</DocxTable>

