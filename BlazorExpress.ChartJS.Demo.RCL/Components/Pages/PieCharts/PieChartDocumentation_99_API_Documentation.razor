@attribute [Route(pageUrl)]

<PageHeroSection PageUrl="@pageUrl"
                 Title="@title"
                 Heading="@heading"
                 Description="@description"
                 ImageUrl="@imageUrl" />

<img src="https://i.imgur.com/dDpIuzk.png" class="img-fluid" alt="Blazor Pie Chart - API Documentation" />

<SectionHeading Size="HeadingSize.H4" Text="Parameters" PageUrl="@pageUrl" HashTagName="parameters" />
<DocxTable TItem="PieChart" DocType="DocType.Parameters">
    <DocxTRow TItem="PieChart" PropertyName="@nameof(PieChart.Height)" DefaultValue="null" Required="false" Description="Gets or sets chart container height." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChart" PropertyName="@nameof(PieChart.HeightUnit)" DefaultValue="Unit.Px" Required="false" Description="Gets or sets chart container height unit of measure." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChart" PropertyName="@nameof(PieChart.Width)" DefaultValue="null" Required="false" Description="Gets or sets chart container width." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChart" PropertyName="@nameof(PieChart.WidthUnit)" DefaultValue="Unit.Px" Required="false" Description="Gets or sets chart container width unit of measure." AddedVersion="1.0.0" />
</DocxTable>

<SectionHeading Size="HeadingSize.H4" Text="Methods" PageUrl="@pageUrl" HashTagName="methods" />
<DocxTable TItem="PieChart" DocType="DocType.Methods">
    <DocxTRow TItem="PieChart" MethodName="AddDataAsync(ChartData chartData, string dataLabel, IChartDatasetData data)" ReturnType="Task<ChartData>" Description="Adds data to chart." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChart" MethodName="AddDataAsync(ChartData chartData, string dataLabel, IReadOnlyCollection<IChartDatasetData> data)" ReturnType="Task<ChartData>" Description="Adds dataset to chart." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChart" MethodName="AddDatasetAsync(ChartData chartData, IChartDataset chartDataset, IChartOptions chartOptions)" ReturnType="Task<ChartData>" Description="Adds dataset to chart." AddedVersion="1.10.0" />
    <DocxTRow TItem="PieChart" MethodName="InitializeAsync(ChartData chartData, IChartOptions chartOptions, string[]? plugins = null)" ReturnType="Task" Description="Initialize the chat." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChart" MethodName="ResizeAsync(int width, int height, Unit widthUnit = Unit.Px, Unit heightUnit = Unit.Px)" ReturnType="Task" Description="Resize the chart." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChart" MethodName="UpdateAsync(ChartData chartData, IChartOptions chartOptions)" ReturnType="Task" Description="Update the chart." AddedVersion="1.0.0" />
</DocxTable>

<SectionHeading Size="HeadingSize.H4" Text="ChartData Members" PageUrl="@pageUrl" HashTagName="chartdata-Members" />
<DocxTable TItem="ChartData" DocType="DocType.Properties">
    <DocxTRow TItem="ChartData" PropertyName="@nameof(ChartData.Datasets)" PropertyType="List<IChartDataset>" DefaultValue="null" Required="true" Description="Gets or sets the Datasets." AddedVersion="1.0.0" />
    <DocxTRow TItem="ChartData" PropertyName="@nameof(ChartData.Labels)" PropertyType="List<string>" DefaultValue="Unit.Px" Required="true" Description="Gets or sets the Labels." AddedVersion="1.0.0" />
</DocxTable>

<SectionHeading Size="HeadingSize.H4" Text="PieChartDataset Members" PageUrl="@pageUrl" HashTagName="piechart-dataset-members" />
<BlazorBootstrap.Callout Color="CalloutColor.Info">
    <code>PieChartDataset</code> implements <code>IChartDataset</code>.
</BlazorBootstrap.Callout>
<DocxTable TItem="PieChartDataset" DocType="DocType.Properties">
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.BackgroundColor)" PropertyType="List<string>" DefaultValue="null" Required="false" Description="Get or sets the background color." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.BorderColor)" PropertyType="List<string>" DefaultValue="null" Required="false" Description="Get or sets the border color." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.BorderWidth)" PropertyType="List<double>" DefaultValue="null" Required="false" Description="Gets or sets the border width." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.Clip)" DefaultValue="null" Required="false" Description="How to clip relative to chartArea. Positive value allows overflow, negative value clips that many pixels inside chartArea. 0 = clip at chartArea. Clipping can also be configured per side: <code>clip: {left:5, top:false, right:-2, bottom:0}</code>" AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.Data)" PropertyType="List<double>" DefaultValue="null" Required="false" Description="Get or sets the Data." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.Datalabels)" PropertyType="PieChartDatasetDataLabels" DefaultValue="" Required="false" Description="Get or sets the data labels" AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.Hidden)" DefaultValue="false" Required="false" Description="	Configures the visibility state of the dataset. Set it to true, to hide the dataset from the chart." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.HoverBackgroundColor)" PropertyType="List<string>" DefaultValue="null" Required="true" Description="Get or sets the HoverBackgroundColor." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.HoverBorderColor)" PropertyType="List<string>" DefaultValue="null" Required="true" Description="Get or sets the HoverBorderColor." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.HoverBorderWidth)" PropertyType="List<string>" DefaultValue="null" Required="true" Description="Get or sets the HoverBorderWidth." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.Label)" DefaultValue="null" Required="false" Description="The label for the dataset which appears in the legend and tooltips." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDataset" PropertyName="@nameof(PieChartDataset.Type)" DefaultValue="null" Required="true" Description="Get or sets the chart type." AddedVersion="1.0.0" />
</DocxTable>

<SectionHeading Size="HeadingSize.H4" Text="PieChartDatasetDataLabels Members" PageUrl="@pageUrl" HashTagName="piechart-dataset-data-labels-members" />
<DocxTable TItem="PieChartDatasetDataLabels" DocType="DocType.Properties">
    <DocxTRow TItem="PieChartDatasetDataLabels" PropertyName="@nameof(PieChartDatasetDataLabels.Anchor)" DefaultValue="center" Required="false" Description="Gets or sets the anchor." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartDatasetDataLabels" PropertyName="@nameof(PieChartDatasetDataLabels.BorderWidth)" DefaultValue="2" Required="false" Description="Gets or sets the border width." AddedVersion="1.0.0" />
</DocxTable>

<SectionHeading Size="HeadingSize.H4" Text="PieChartOptions Members" PageUrl="@pageUrl" HashTagName="piechart-options-members" />
<BlazorBootstrap.Callout Color="CalloutColor.Info">
    <code>PieChartOptions</code> implements <code>ChartOptions</code>.
</BlazorBootstrap.Callout>
<DocxTable TItem="PieChartOptions" DocType="DocType.Properties">
    <DocxTRow TItem="PieChartOptions" PropertyName="@nameof(PieChartOptions.Locale)" DefaultValue="null" Required="false" Description="Gets or sets the locale. By default, the chart is using the default locale of the platform which is running on." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartOptions" PropertyName="@nameof(PieChartOptions.Plugins)" PropertyType="PieChartPlugins" DefaultValue="" Required="false" Description="	Gets or sets the Plugins." AddedVersion="1.0.0" />
    <DocxTRow TItem="PieChartOptions" PropertyName="@nameof(PieChartOptions.Responsive)" DefaultValue="false" Required="false" Description="Gets or sets the Responsive." AddedVersion="1.0.0" />
</DocxTable>

@code {
    private const string pageUrl = "/charts/pie-chart/api-documentation";
    private const string title = "Blazor Pie Chart - API Documentation";
    private const string heading = "Blazor Pie Chart - API Documentation";
    private const string description = "This documentation provides a comprehensive reference for the Blazor Pie Chart component, guiding you through its functionalities and configuration options.";
    private const string imageUrl = "https://i.imgur.com/dDpIuzk.png";
}
