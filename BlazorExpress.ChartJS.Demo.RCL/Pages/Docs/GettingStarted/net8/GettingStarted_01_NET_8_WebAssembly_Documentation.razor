                    <CodeChunk Class="mt-3" LanguageCode="LanguageCode.Text" FilePath="~\Pages\Docs\GettingStarted\net8\01_A_Manual_Install_01_Snippet.razor" ProjectRootClassType="DemoAppConstants.ProjectRootClassType" />
